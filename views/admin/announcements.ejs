<div class="container py-4">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">
                <i class="fas fa-bullhorn me-2"></i>Manage Announcements
            </h1>
        </div>
    </div>
    
    <div class="row">
        <!-- Create Announcement Form -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-plus me-2"></i>Create Announcement</h5>
                </div>
                <div class="card-body">
                    <form method="POST" action="/admin/announcements">
                        <div class="mb-3">
                            <label for="title" class="form-label">Title</label>
                            <input type="text" class="form-control" id="title" name="title" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="content" class="form-label">Content</label>
                            <textarea class="form-control" id="content" name="content" rows="4" required></textarea>
                        </div>
                        
                        <div class="mb-3">
                            <label for="department" class="form-label">Department</label>
                            <select class="form-select" id="department" name="department">
                                <option value="">General (All Members)</option>
                                <% departments.forEach(dept => { %>
                                    <option value="<%= dept._id %>"><%= dept.name %></option>
                                <% }) %>
                            </select>
                        </div>
                        
                        <div class="mb-3">
                            <label for="priority" class="form-label">Priority</label>
                            <select class="form-select" id="priority" name="priority">
                                <option value="low">Low</option>
                                <option value="medium" selected>Medium</option>
                                <option value="high">High</option>
                            </select>
                        </div>
                        
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Create Announcement</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <!-- Existing Announcements -->
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-list me-2"></i>Recent Announcements</h5>
                </div>
                <div class="card-body">
                    <% if (announcements.length > 0) { %>
                        <% announcements.forEach(announcement => { %>
                            <div class="card mb-3">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="flex-grow-1">
                                            <h6 class="card-title">
                                                <%= announcement.title %>
                                                <% if (announcement.priority === 'high') { %>
                                                    <span class="badge bg-danger">High Priority</span>
                                                <% } else if (announcement.priority === 'medium') { %>
                                                    <span class="badge bg-warning">Medium Priority</span>
                                                <% } else { %>
                                                    <span class="badge bg-secondary">Low Priority</span>
                                                <% } %>
                                                
                                                <% if (!announcement.isActive) { %>
                                                    <span class="badge bg-secondary">Inactive</span>
                                                <% } %>
                                            </h6>
                                            <p class="card-text"><%= announcement.content %></p>
                                            <small class="text-muted">
                                                By <%= announcement.author.firstName %> <%= announcement.author.lastName %>
                                                <% if (announcement.department) { %>
                                                    | Department: <%= announcement.department.name %>
                                                <% } else { %>
                                                    | General Announcement
                                                <% } %>
                                                | <%= new Date(announcement.createdDate).toLocaleDateString() %>
                                            </small>
                                        </div>
                                        <div class="ms-3">
                                            <div class="btn-group-vertical btn-group-sm">
                                                <button class="btn btn-outline-warning btn-sm">Edit</button>
                                                <button class="btn btn-outline-danger btn-sm">Delete</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    <% } else { %>
                        <p class="text-muted">No announcements created yet.</p>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>    <!-
- Footer -->
