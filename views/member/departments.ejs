<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Departments - Member Area</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .navbar-brand { font-weight: bold; color: #8B4513 !important; }
        .btn-primary { background-color: #8B4513; border-color: #8B4513; }
        .btn-primary:hover { background-color: #A0522D; border-color: #A0522D; }
        .text-primary { color: #8B4513 !important; }
        .bg-primary { background-color: #8B4513 !important; }
        .department-card { transition: transform 0.2s; }
        .department-card:hover { transform: translateY(-5px); }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-music me-2"></i>Sound of Revival
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/about">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/departments">Departments</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/member/photos">Photos</a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-user me-1"></i><%= user.firstName %>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/member/dashboard">Dashboard</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="/auth/logout">Logout</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container py-5">
        <div class="row">
            <div class="col-12">
                <h1 class="text-center mb-5">Join Departments</h1>
                <p class="lead text-center mb-5">Discover and join the departments that match your calling and interests</p>
            </div>
        </div>
        
        <div class="row">
            <% departments.forEach(department => { %>
                <div class="col-lg-6 mb-4">
                    <div class="card department-card h-100 shadow-sm">
                        <div class="card-body">
                            <h4 class="card-title text-primary mb-3">
                                <i class="fas fa-users me-2"></i><%= department.name %>
                            </h4>
                            <p class="card-text mb-3"><%= department.description %></p>
                            
                            <% if (department.responsibilities.length > 0) { %>
                                <h6 class="text-secondary">Responsibilities:</h6>
                                <ul class="small mb-3">
                                    <% department.responsibilities.forEach(resp => { %>
                                        <li><%= resp %></li>
                                    <% }) %>
                                </ul>
                            <% } %>
                            
                            <% if (department.requirements.length > 0) { %>
                                <h6 class="text-secondary">Requirements:</h6>
                                <ul class="small mb-3">
                                    <% department.requirements.forEach(req => { %>
                                        <li><%= req %></li>
                                    <% }) %>
                                </ul>
                            <% } %>
                            
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <small class="text-muted">
                                        <i class="fas fa-user-friends me-1"></i>
                                        <%= department.members.length %> member<%= department.members.length !== 1 ? 's' : '' %>
                                    </small>
                                    <% if (department.leader) { %>
                                        <br>
                                        <small class="text-muted">
                                            <i class="fas fa-crown me-1"></i>
                                            Led by <%= department.leader.firstName %> <%= department.leader.lastName %>
                                        </small>
                                    <% } %>
                                </div>
                                
                                <% if (userDepartments.includes(department._id.toString())) { %>
                                    <div>
                                        <span class="badge bg-success me-2">Joined</span>
                                        <form method="POST" action="/member/leave-department/<%= department._id %>" class="d-inline">
                                            <button type="submit" class="btn btn-outline-danger btn-sm">Leave</button>
                                        </form>
                                    </div>
                                <% } else { %>
                                    <form method="POST" action="/member/join-department/<%= department._id %>" class="d-inline">
                                        <button type="submit" class="btn btn-primary btn-sm">Join</button>
                                    </form>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
        
        <% if (departments.length === 0) { %>
            <div class="row">
                <div class="col-12 text-center">
                    <div class="alert alert-info">
                        <h4>No departments available yet</h4>
                        <p>Check back soon as we set up our ministry departments!</p>
                    </div>
                </div>
            </div>
        <% } %>
    </div>

    <!-- Footer -->
    <footer class="mt-5 py-4" style="background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%); color: white;">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5><i class="fas fa-music me-2"></i>Sound of Revival</h5>
                    <p class="mb-2">Serving God through music and fellowship</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="mb-1">&copy; 2024 Sound of Revival. All rights reserved.</p>
                    <p class="mb-0 small text-white-50">
                        <i class="fas fa-code me-1"></i>Designed by <strong>Peter J</strong>
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>